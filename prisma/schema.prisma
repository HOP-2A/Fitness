generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AttendanceStatus {
  HIISEN
  HIIGEEGUI
}

enum ExerciseStatus {
  APPROVE
  DONE
  PENDING
}

model User {
  id             String  @id @default(nanoid())
  username       String  @unique
  email          String  @unique
  clerkId        String  @unique
  profilePicture String?
  coin           Int     @default(0)

  purchases Purchase[]

  exercises  AssignedExercise[]
  attendance Attendance[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ShopItem {
  id          String @id @default(nanoid())
  productName String
  title       String
  image       String
  price       Int

  stock      Int
  dailyLimit Int
  soldToday  Int @default(0)

  teacherId String
  teacher   Teacher @relation(fields: [teacherId], references: [id])

  purchases Purchase[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Purchase {
  id String @id @default(nanoid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  itemId String
  item   ShopItem @relation(fields: [itemId], references: [id])

  quantity   Int @default(1)
  totalPrice Int

  createdAt DateTime @default(now())
}

model Teacher {
  id        String @id @default(nanoid())
  adminName String
  email     String @unique
  clerkId   String @unique

  shopItems ShopItem[]

  assignedExercises AssignedExercise[]
  todos             Todo[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AssignedExercise {
  id String @id @default(nanoid())

  traineeId String
  trainee   User   @relation(fields: [traineeId], references: [id])

  teacherId String
  teacher   Teacher @relation(fields: [teacherId], references: [id])

  title       String
  description String?
  target      String?
  rate        Int     @default(0)

  status ExerciseStatus @default(PENDING)
  reward Int            @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Attendance {
  id   String   @id @default(nanoid())
  date DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  attendanceStatus AttendanceStatus
}

model Session {
  id        String   @id @default(nanoid())
  title     String
  time      DateTime
  students  Int
  createdAt DateTime @default(now())
}

model Todo {
  id        String   @id @default(nanoid())
  task      String
  teacherId String
  teacher   Teacher  @relation(fields: [teacherId], references: [id])
  createdAt DateTime @default(now())
}
